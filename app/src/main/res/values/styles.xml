<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- for overlay action mode -->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Text -->
    <style name="SmallText" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#434343</item>
    </style>

    <style name="NormalText" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#434343</item>
    </style>

    <style name="LargeText" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#434343</item>
    </style>

    <style name="SmallText.Bold" parent="SmallText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalText.Bold" parent="NormalText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeText.Bold" parent="LargeText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallText.Accent" parent="SmallText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="NormalText.Accent" parent="NormalText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Text -->
    
    <!-- Appbar -->
    <style name="AppBarText" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#FFF</item>
        <item name="android:textColorSecondary">#FFF</item>
    </style>
    <!-- Appbar -->

    <!-- Buttons -->
    <style name="ButtonPrimary" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#FFF</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="ButtonAccent" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#FFF</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!-- Buttons -->


</resources>
